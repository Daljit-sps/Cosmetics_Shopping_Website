<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
    <title>@ViewData["Title"] - Glance_Cosmetics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/adminSite.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cosmetics_Shopping_Website.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
    

    
</head>
<body id ="body-pd">
   <header class="header" id="header">
        <div class="header_toggle">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="l-navbar" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="mt-2">
            <a asp-controller="Users" asp-action="Profile" class="text-black me-2" data-mdb-toggle="tooltip" title="View Profile"><i class="fa-solid fa-circle-user fa-2x me-2"></i></a>

        </div>
    </header>
    <div class="l-navbar collapse d-sm-inline-flex justify-content-between" id="nav-bar">
        <nav class="nav flex-grow-1">
            <a class="nav-logo" asp-area="" asp-controller="Users" asp-action="Dashboard"><img alt="Logo" src="~/images/Glance Cosmetics.png" class="img-fluid"> <span class="nav_logo-name">Glance Cosmetics</span></a>
           
            
            <div>
                <div class="nav_list"> <a asp-controller="Users" asp-action="Dashboard" class="nav_link"> 
                     <i class="fa-solid fa-bars-progress"></i><span class="nav_name">Dashboard</span> </a> 
                    <a asp-controller="Users" asp-action="Index" class="nav_link"><i class="fa fa-user" aria-hidden="true"></i> <span class="nav_name">Users</span> </a>
                    <a asp-controller="Categories" asp-action="Index" class="nav_link"><i class="fa-solid fa-layer-group"></i> <span class="nav_name">Categories</span> </a>
                    <a asp-controller="SubCategories" asp-action="Index" class="nav_link"><i class="fa-solid fa-clone"></i> <span class="nav_name">Sub-Categories</span> </a>
                    <a asp-controller="Products" asp-action="Index" class="nav_link"><i class="fa-solid fa-tag"></i> <span class="nav_name">Products</span> </a>
                    <a asp-controller="ProductVariants" asp-action="Index" class="nav_link"><i class="fa-solid fa-tags"></i> <span class="nav_name">Product-Variants</span> </a>
                    <a asp-controller="Orders" asp-action="Index" class="nav_link"><i class="fas fa-check-circle"></i> <span class="nav_name">Orders</span> </a>
                </div>
            </div> 
            <a asp-controller="Users" asp-action="LogOut" class="nav_link"><i class="fas fa-sign-out-alt"></i><span class="nav_name">LogOut</span> </a>
        </nav>
    </div>
    <!--Container Main start-->
    <div class="containerAdmin">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

