@{

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
    <title>@ViewData["Title"] - Glance_Cosmetics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cosmetics_Shopping_Website.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light  fixed-top text-black">
            <div class="container-fluid ">
                
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav float-start nav-items-padding">
                        <div class="nav-item dropdown pe-2">
                            <a href="#" class="nav-link  text-black dropdownMenu" data-toggle="dropdown" data-bs-toggle="dropdown">Makeup</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                                <a asp-controller="Home" asp-action="ProductLists" asp-route-condition="Face" class="dropdown-item">Face</a>
                                <a asp-controller="Home" asp-action="ProductLists" asp-route-condition="Eyes" class="dropdown-item">Eyes</a>
                                <a asp-controller="Home" asp-action="ProductLists" asp-route-condition="Lips" class="dropdown-item">Lips</a>
                            </div>
                        </div>
                       
                        <div class="nav-item dropdown pe-2">
                            <a href="#" class="nav-link text-black" data-toggle="dropdown" data-bs-toggle="dropdown">Skin</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                                <a asp-controller="Home" asp-action="ProductLists" asp-route-condition="Face Care" class="dropdown-item">Face Care</a>
                                <a asp-controller="Home" asp-action="ProductLists" asp-route-condition="Body Care" class="dropdown-item">Body Care</a>
                            </div>
                        </div>
                       
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link  text-black" data-toggle="dropdown" data-bs-toggle="dropdown">Fragrance</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                                <a asp-controller="Home" asp-action="ProductLists" asp-route-condition="Perfumes" class="dropdown-item">Men</a>
                                <a asp-controller="Home" asp-action="ProductLists" asp-route-condition="Perfume" class="dropdown-item">Women</a>
                            </div>
                        </div>
                    </div>
                    <a asp-controller="Users" asp-action="Dashboard" class="navbar-brand  nav-padding"><img src="~/images/Glance_Cosmetics-removebg.png" alt="site-logo" class="logo-img"/>
                        <span>&nbsp;Glance Cosmetics</span>
                    </a>
                    
                    <div class="navbar-nav float-end nav-padding">
                        <form class="d-flex" method="get" asp-controller="Home" asp-action="Search">
                            <div class="input-group">
                                <input type="text" class="form-control" name="searchText" placeholder="Search">
                                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                            </div>
                        </form>&nbsp;
                        @if (ViewData["IsLogin"] == null)
                        {
                            <a class="nav-link dropdownMenu" asp-controller="Users" asp-action="Login" data-mdb-toggle="tooltip" title="Login">
                                <i class="fa-regular fa-user fa-lg"></i>
                            </a>
                        }
                        else
                        {
                            <div class="dropdown">
                                <a class="nav-link dropdownMenu" asp-controller="Users" asp-action="Login" data-toggle="dropdown" data-bs-toggle="dropdown">
                                    <i class="fa-regular fa-user fa-lg"></i><span class="ms-1 text-dark">@ViewData["LogedUserName"]</span>
                                </a>
                                <div class="dropdown-menu w-25" aria-labelledby="dropdownMenu">
                                    <a asp-controller="Users" asp-action="Profile" class="dropdown-item">Profile</a>
                                    <a asp-controller="Home" asp-action="UserOrders" class="dropdown-item">My Orders</a>
                                    <a asp-controller="Users" asp-action="LogOut" class="dropdown-item">LogOut</a>
                                   
                                </div>
                            </div>
                        }

                        <a class="nav-item nav-link" asp-controller="Home" asp-action="Wishlist" data-mdb-toggle="tooltip" title="Wishlist">
                            <i class="fa-regular fa-heart fa-lg" ></i>
                        </a>
                        
                        @*<div class="me-2">
                            <a class="nav-item nav-link position-relative" asp-controller="Home" asp-action="Cart" data-mdb-toggle="tooltip" title="Cart">
                                <i class="fas fa-shopping-bag fa-lg" data-mdb-toggle="tooltip" title="Cart"></i>
                                <span class="position-absolute mt-0 ms-1 translate-middle badge rounded-circle">3</span>
                            </a>
                        </div>
*@
                        <a class="nav-item nav-link" asp-controller="Home" asp-action="Cart" data-mdb-toggle="tooltip" title="Login">
                            <i class="fas fa-shopping-bag fa-lg" data-mdb-toggle="tooltip" title="Cart"></i>
                        </a> 
                        
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    </div>
    <footer class="mt-5 text-center cart_summary">
        <hr />
        <div class="row mx-0 p-3">
            <div class="col-12">
                <h5 class="text-uppercase">Glance Cosmetics</h5>
                <p>
                    Welcome to Glance cosmetics, where beauty meets convenience. Discover a wide range of high
                    quality makeup, fragrance and skincare products. From vibrant lipsticks to nourishing moisturizers, we have everything
                    that you need to enhance your natural beauty.
                </p>
            </div>
        </div>
        <div class="row mx-0 p-2">
            <div class="col-6">
                <h5 class="text-uppercase">Categories</h5>
                <ul class="list-unstyled mb-0">
                    <li>Makeup</li>
                    <li>Face Care</li>
                    <li>Body Care</li>
                    <li>Fragrance</li>
                </ul>
            </div>
            <div class="col-6">
                <h5 class="text-uppercase">Products</h5>
                <ul class="list-unstyled mb-0">
                    <li>Matte Lipsticks</li>
                    <li>Blushes</li>
                    <li>Highlighters</li>
                    <li>Body Mist</li>
                </ul>
            </div>
        </div>
        <div class="text-center mt-4 p-4" style="background-color: rgba(0, 0, 0, 0.2)">
            © 2023 Copyright:
            <a class="text-white" asp-action="Dashboard">GlanceCosmetics.com</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

