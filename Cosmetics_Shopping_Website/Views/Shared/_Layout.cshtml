<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.css">
    <title>@ViewData["Title"] - Glance_Cosmetics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cosmetics_Shopping_Website.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light  fixed-top text-black">
            <div class="container-fluid ">
                
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav float-start nav-items-padding">
                        <div class="nav-item dropdown pe-2">
                            <a href="#" class="nav-link  text-black dropdownMenu" data-toggle="dropdown" data-bs-toggle="dropdown">Makeup</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                                <a href="#" class="dropdown-item">Face</a>
                                <a href="#" class="dropdown-item">Eyes</a>
                                <a href="#" class="dropdown-item">Lips</a>
                            </div>
                        </div>
                       
                        <div class="nav-item dropdown pe-2">
                            <a href="#" class="nav-link text-black" data-toggle="dropdown" data-bs-toggle="dropdown">Skin</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                                <a href="#" class="dropdown-item">Face Care</a>
                                <a href="#" class="dropdown-item">Body Care</a>
                            </div>
                        </div>
                       
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link  text-black" data-toggle="dropdown" data-bs-toggle="dropdown">Fragrance</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                                <a href="#" class="dropdown-item">Men</a>
                                <a href="#" class="dropdown-item">Women</a>
                            </div>
                        </div>
                    </div>
                    <a asp-controller="Users" asp-action="Dashboard" class="navbar-brand  nav-padding"><img src="~/images/Glance_Cosmetics-removebg.png" alt="site-logo" class="logo-img"/>
                        <span>&nbsp;Glance Cosmetics</span>
                    </a>
                    
                    <div class="navbar-nav float-end nav-padding">
                        <form class="d-flex">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search">
                                <button type="button" class="btn btn-primary"><i class="fas fa-search"></i></button>
                            </div>
                        </form>&nbsp;
                        <a class="nav-item nav-link" asp-controller="Home" asp-action="Wishlist" data-mdb-toggle="tooltip" title="Wishlist">
                            <i class="fa-regular fa-heart fa-lg" ></i>
                        </a>
                        <a class="nav-item nav-link" asp-controller="Users" asp-action="Login" data-mdb-toggle="tooltip" title="Login">
                            <i class="fa-regular fa-user fa-lg" ></i>
                        </a>
                        <a class="nav-item nav-link" asp-controller="Home" asp-action="Cart" data-mdb-toggle="tooltip" title="Login">
                            <i class="fas fa-shopping-bag fa-lg" data-mdb-toggle="tooltip" title="Cart"></i>
                            <span class="badge">100</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    </div>
    <footer class="mt-5 text-center">
        <hr />
        <div class="row mx-0 p-3">
            <div class="col-12">
                <h5 class="text-uppercase">Glance Cosmetics</h5>
                <p>
                    Welcome to Glance cosmetics, where beauty meets convenience. Discover a wide range of high
                    quality makeup, fragrance and skincare products. From vibrant lipsticks to nourishing moisturizers, we have everything
                    that you need to enhance your natural beauty.
                </p>
            </div>
        </div>
        <div class="row mx-0 p-2">
            <div class="col-6">
                <h5 class="text-uppercase">Categories</h5>
                <ul class="list-unstyled mb-0">
                    <li><a href="#" class="text-black">Makeup</a></li>
                    <li><a href="#" class="text-black">Face Care</a></li>
                    <li><a href="#" class="text-black">Body Care</a></li>
                    <li><a href="#" class="text-black">Fragrance</a></li>
                </ul>
            </div>
            <div class="col-6">
                <h5 class="text-uppercase">Products</h5>
                <ul class="list-unstyled mb-0">
                    <li><a href="#" class="text-black">Matte Lipsticks</a></li>
                    <li><a href="#" class="text-black">Blushes</a></li>
                    <li><a href="#" class="text-black">Highlighters</a></li>
                    <li><a href="#" class="text-black">Body Mist</a></li>
                </ul>
            </div>
        </div>
        <div class="text-center mt-4 p-4" style="background-color: rgba(0, 0, 0, 0.2)">
            © 2023 Copyright:
            <a class="text-white" asp-action="Dashboard">GlanceCosmetics.com</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

