@model IEnumerable<Cosmetics_Shopping_Website.GenericPattern.ViewModels.Order_Items_PaymentVM>


@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Orders";
}

<body class="mb-0">
    <div class="space bg-transparent"></div>
    <div class="d-flex align-items-center justify-content-center mt-5">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item text-black" aria-current="page">Cart</li>
                <li class="breadcrumb-item text-black" aria-current="page">Shipping</li>
                <li class="breadcrumb-item text-black" aria-current="page">Payment</li>
                <li class="breadcrumb-item text-black active"><a href='#' class="text-reset">Orders</a></li>
            </ol>
        </nav>
    </div>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center h-100">
                <div class="col-lg-3 px-0">
                    <div class="card">
                        <div class="card-body p-0">
                            <a asp-action="ProductLists" asp-route-condition="Eyeshadow Palettes"><img src="~/images/Pink Modern Eyeshadow Cosmetic Product Instagram Story (1).png" alt="side-banner" class="img-fluid" /></a>
                        </div>
                    </div>
                    
                </div>
                <div class="col-lg-9">
                    <div class="card float-start w-100" style="border-radius: 15px;">
                        <div class="card-body">
                            <div class="d-flex text-black">
                                <div class="flex-grow-1">
                                    <h4>My Orders</h4>
                                    <hr />
                                    @if (ViewData["orders"] != null)
                                    {
                                        <div class="row">
                                            <div class="col-12 cart_list">
                                                <div class="p-5">
                                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                                        <h1 class="fw-bold mb-0 text-black">Your Orders</h1>
                                                    </div>
                                                    <hr class="my-4">
                                                    <div class="mt-3">
                                                        <div class="text-center p-3">
                                                            <h5 class="text-black">@ViewData["orders"]</h5>
                                                            <a asp-controller="Users" asp-action="HomePage" class="btn btn-outline-dark w-50 mt-4">Continue Shopping</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                    }
                                    else
                                    {
                                        <div class="table-responsive w-100">
                                            <table class="table text-nowrap mt-0" id="table_list">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th> @Html.DisplayNameFor(model => model.OrderId)</th>
                                                        <th> @Html.DisplayNameFor(model => model.OrderStatus)</th>
                                                        <th> @Html.DisplayNameFor(model => model.TotalPrice)</th>
                                                        <th> @Html.DisplayNameFor(model => model.OrderPlacedOn)</th>
                                                        <th> @Html.DisplayNameFor(model => model.DeliveryDate)</th>

                                                        <th> Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                OD- @Html.DisplayFor(modelItem => item.OrderId)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.OrderStatus)
                                                            </td>
                                                            <td>
                                                                <p>Rs.@Html.DisplayFor(modelItem => item.TotalPrice)</p>
                                                            </td>
                                                            <td>
                                                                <p>@Html.DisplayFor(modelItem => item.OrderPlacedOn)</p>
                                                            </td>
                                                            <td>
                                                                <p>@Html.DisplayFor(modelItem => item.DeliveryDate)</p>
                                                            </td>

                                                            <td>
                                                                <a asp-action="OrderDetails" asp-route-id="@item.OrderId"><i class="fa fa-info-circle" aria-hidden="true" data-mdb-toggle="tooltip" title="View Details"></i></a>
                                                                
                                                            </td>
                                                        </tr>
                                                        
                                                    }
                                                </tbody>
                                            </table>

                                        </div>
