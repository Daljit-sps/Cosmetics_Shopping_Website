                                            </div>
                                        }*@

                                    }
                                   
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
   
    <div class="space bg-transparent"></div>
    @section scripts{
        <script>

            $(document).ready(function () {
                $('#table_list').DataTable();
            });
        </script>
    }



</body>



