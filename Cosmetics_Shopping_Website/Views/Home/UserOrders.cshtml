                                        {
                                            <div class="row justify-content-center mb-3">
                                                <div class="col-md-12 col-xl-10">
                                                    <div class="card shadow-0 border rounded-3">
                                                        <div class="card-body">
                                                            <div class="row">
                                                                <div class="col-md-6 col-lg-6 col-xl-6 me-3">
                                                                    <div class="row">
                                                                        <h4>Order Id: @item.OrderId</h4>
                                                                        <hr />
                                                                        <div class="col-lg-6 me-0">
                                                                            <h6 class="mb-2 pb-1">Order Status</h6>
                                                                            <h6 class="mb-2 pb-1">Order Placed On</h6>
                                                                            <h6 class="mb-2 pb-1">Delivery Date</h6>
                                                                        </div>

                                                                        <div class="col-lg-6">
                                                                            <p class="mb-1 pb-1" style="color: #2b2a2a;">@item.OrderStatus</p>
