@using Microsoft.Extensions.Options
@inject IOptions<Cosmetics_Shopping_Website.StripeSettings> Stripe
@model IEnumerable<Cosmetics_Shopping_Website.GenericPattern.ViewModels.CartItemsVM>


@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Payment";
}
<body class="mb-0">
    <div class="space bg-transparent"></div>
    <div class="d-flex align-items-center justify-content-center mt-3">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item text-black "><a href='javascript:history.go(-2)' class="text-reset notActive">Cart</a></li>
                <li class="breadcrumb-item text-black " aria-current="page"><a href='javascript:history.go(-1)' class="text-reset notActive">Shipping</a></li>
                <li class="breadcrumb-item text-black active" aria-current="page"><a href='#' class="text-reset">Payment</a></li>
                <li class="breadcrumb-item text-black" aria-current="page">Orders</li>
            </ol>
        </nav>
    </div>
    <section class="h-100 h-custom">
        <div class="container-fluid py-2 h-100 ">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card">
                        <div class="card-body p-4">
                            
                            <div class="row">
                                <div class="col-lg-8">
                                    <h5 class="mb-3">
                                        <a asp-controller="Users" asp-action="HomePage" class="text-body">
                                            <i class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping
                                        </a>
                                    </h5>
                                    @if (ViewBag.ProductVariant != null)
                                    {
                                        <div class="d-flex justify-content-between align-items-center mb-4">
                                            <div>
                                                <p class="mb-1">Item that you are going to buy</p>
                                            </div>
                                        </div>
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                                        <h5 class="text-black mb-0">Name</h5>
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                        <h5 class="text-black mb-0">Quantity</h5>

                                                    </div>
                                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                        <h5 class="mb-0">Price</h5>
                                                    </div>
                                                </div>
                                                <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                                        <img src="~/images/@ViewBag.ProductVariant.VariantImage"
                                                             class="img-fluid rounded-3" alt="product">
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                                        <h6 class="text-black mb-0">@ViewBag.ProductVariant.VariantName</h6>
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                        <h6 class="text-black mb-0">1</h6>

                                                    </div>
                                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                        <h6 class="mb-0">Rs. @ViewBag.ProductVariant.Price</h6>
                                                    </div>
                                                </div>
                                                <hr />

                                            </div>



                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-between align-items-center mb-4">
                                            <div>
                                                <p class="mb-1">Shopping cart</p>
                                                <p class="mb-0">You have @ViewData["CartItemsCount"] items in your cart</p>
                                            </div>
                                        </div>

                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                                        <h5 class="text-black mb-0">Name</h5>
                                                    </div>
                                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                        <h5 class="text-black mb-0">Quantity</h5>

                                                    </div>
                                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                        <h5 class="mb-0">Price</h5>
                                                    </div>
                                                </div>
                                                @foreach (var item in Model)
                                                {
                                                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                        <div class="col-md-2 col-lg-2 col-xl-2">
                                                            <img src="~/images/@item.VariantImage"
                                                                 class="img-fluid rounded-3" alt="product">
                                                        </div>
                                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                                            <h6 class="text-black mb-0">@item.VariantName</h6>
                                                        </div>
                                                        <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                            <h6 class="text-black mb-0">@item.Quantity</h6>

                                                        </div>
                                                        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                            <h6 class="mb-0">Rs. @item.CartItemPrice</h6>
                                                        </div>
                                                    </div>
                                                    <hr />



                                                }

                                            </div>



                                        </div>
                                    }
                                    
                                </div>
                                <div class="col-lg-4 cart_summary rounded-pill">
                                    <div class="p-5">
                                        <h3 class="fw-bold mb-5 mt-2 pt-1 text-center">Summary</h3>
                                        <hr class="my-4">

                                        <div class="d-flex justify-content-between mb-4">
                                            <h5 class="text-uppercase">Subtotal</h5>
                                            <h5>Rs.@ViewData["SubTotalPrice"] </h5>
                                        </div>

                                        <div class="d-flex justify-content-between mb-4">
                                            <h5 class="text-uppercase">Shipping Cost</h5>
                                            <h5>Rs.@ViewData["ShippingPrice"] </h5>
                                        </div>

                                        <div class="d-flex justify-content-between">
                                            <h5 class="text-uppercase">Total price</h5>
                                            <h5>Rs. @ViewData["TotalPrice"]</h5>
                                        </div>
                                        <hr class="my-5">
                                        <div class="d-flex justify-content-between my-3">
                                            <p><strong>Expected Delivery</strong></p>
                                            <p class="mb-0">@DateTime.Now.AddDays(5).ToShortDateString() - @DateTime.Now.AddDays(8).ToShortDateString()</p>
                                        </div>
                                        <a asp-action="Checkout" asp-route-data="@Json.Serialize(ViewBag.ProductVariant)" class="btn btn-dark btn-block btn-lg w-75 ms-5 checkoutButton"
                                           data-mdb-ripple-color="dark">
                                            Checkout
                                        </a>
                                        

                                    </div>
                                </div>
                                
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
</body>
