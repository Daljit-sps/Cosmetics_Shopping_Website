@model Cosmetics_Shopping_Website.GenericPattern.ViewModels.VariantAvailabilityVM

@{
    Layout = "/Views/Shared/AdminNav.cshtml";
    ViewData["Title"] = "Details";
}


<body>

    <div class="row">
        <div>
            <div class="container-fluid mt-2 ">
                <div class="space bg-transparent"></div>
                <!-- row  -->
                <div class="row mb-6">

                    <div class="col-md-12 col-12 mt-6">
                        <!-- card  -->
                        <div class="card">
                            <!-- card header  -->
                            <div class="card-header bg-white  py-4">

                                <div>
                                    <h4 class="mb-0">Availability of : @Model.ProductVariantName</h4>
                                </div>

                            </div>
                            <div class="card_CSP text-black">

                                <div class="card-body">
                                    <div>
                                        <dl class="row">
                                            <dt class="col-sm-5">
                                                @Html.DisplayNameFor(model => model.ProductVariantName)
                                            </dt>
                                            <dd class="col-sm-5">
                                                @Html.DisplayFor(model => model.ProductVariantName)
                                            </dd>

                                            <dt class="col-sm-5">
                                                @Html.DisplayNameFor(model => model.State)
                                            </dt>
                                            <dd class="col-sm-5">
                                                @Html.DisplayFor(model => model.State)
                                            </dd>
                                            <dt class="col-sm-5">
                                                @Html.DisplayNameFor(model => model.IsAvailable)
                                            </dt>
                                            <dd class="col-sm-5">
                                                @if (Model.IsAvailable == true)
                                                {
                                                    <p>Yes</p>
                                                }
                                                else
                                                {
                                                    <p>No</p>
                                                }
                                            </dd>
                                        </dl>
                                        <div class="float-end">
                                            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
                                            <a asp-action="Index">Back to List</a>
                                        </div>

                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>



</body>