@model Cosmetics_Shopping_Website.GenericPattern.ViewModels.VariantAvailabilityVM

@{
    Layout = "/Views/Shared/AdminNav.cshtml";
    ViewData["Title"] = "Edit";
}

<body>

    <div class="row">
        <div>
            <div class="container-fluid mt-2 ">
                <div class="space bg-transparent"></div>
                <!-- row  -->
                <div class="row mb-6">

                    <div class="col-md-12 col-12 mt-6">
                        <!-- card  -->
                        <div class="card">
                            <!-- card header  -->
                            <div class="card-header bg-white  py-4">

                                <div>
                                    <h4 class="mb-0">Change Variant-Availability: @Model.ProductVariantName</h4>
                                </div>

                            </div>
                            <div class="card_CSP text-black">
                                <div class="card-body">
                                    <form asp-action="Edit">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="Id" />
                                        <div class="form-group">
                                            <div class="form-outline mb-4">
                                                <label asp-for="ProductVariantId" class="control-label"></label>
                                                <select asp-for="ProductVariantId" class="form-control" asp-items="ViewBag.DropDownDataForVariant">
                                                    <option>---Select Product-Variant--</option>
                                                </select>
                                                <span asp-validation-for="ProductVariantId" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <div class="form-outline mb-4">
                                                <label asp-for="StateId" class="control-label"></label>
                                                <select asp-for="StateId" class="form-control" asp-items="ViewBag.DropDownDataForState">
                                                    <option>---Select State--</option>
                                                </select>
                                                <span asp-validation-for="StateId" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="form-group form-check">
                                            <div class="form-outline mb-4">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" value="true" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                                                </label>

                                                <span asp-validation-for="IsAvailable" class="text-danger"></span>
                                            </div>

                                        </div>
                                      
                                        <div class="form-group mt-3 float-end">
                                            <input type="submit" value="Save" class="btn btn-primary" /> |
                                            <a asp-action="Index">Back to List</a>
                                        </div>
                                    </form>
                                    <br /><br /><br />
                                </div>

                            </div>

                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>



</body>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
