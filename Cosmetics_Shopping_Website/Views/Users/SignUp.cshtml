@model Cosmetics_Shopping_Website.GenericPattern.ViewModels.SignUpVM

@{
    ViewData["Title"] = "SignUp";
}

<body class="bg mb-0" style="background-color: #9A616D;">
    <section class="vh-50 mt-5">
        <div class="container py-5 h-auto">
            <div class="row d-flex justify-content-center align-items-center mt-4">
                <div class="col col-xl-10">
                    <div class="card " style="border-radius: 1rem;">
                        <div class="row g-0 ">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="/images/photo-1596462502278-27bfdc403348.jpg"
                                     alt="SignUp form" id="loginImg" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center ">
                                <div class="card-body  text-black  ">

                                    <form asp-action="SignUp">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <span class="h1 fw-bold mb-0">Welcome to Glance!</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create an Account</h5>
                                        <div class="row">
                                            <div class="col-md-6 mb-2">
                                                <div class="form-group mb-4">
                                                    <label asp-for="FirstName" class="form-label"></label>
                                                    <input asp-for="FirstName" class="form-control form-control-lg" />
                                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-2">
                                                <div class="form-group mb-4">
                                                    <label asp-for="LastName" class="form-label"></label>
                                                    <input asp-for="LastName" class="form-control form-control-lg" />
                                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <label asp-for="MobileNumber" class="form-label"></label>
                                            <input asp-for="MobileNumber" class="form-control form-control-lg" />
                                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-4">
                                                <div class="form-group mb-4">
                                                    <label asp-for="Email" class="form-label"></label>
                                                    <input asp-for="Email" type="email" class="form-control form-control-lg" />
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div class="form-group mb-4">
                                                    <label asp-for="Password" class="form-label"></label>
                                                    <input asp-for="Password" type="password" class="form-control form-control-lg" />
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="form-group pt-1 mb-4">
                                            <input type="submit" value="Create Account" class="btn btn-dark btn-lg btn-block" />
                                        </div>
                                        <p class=" pb-lg-2">
                                            Already have an account? <a asp-action="Login">Login here</a>
                                        </p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
